{% extends 'RentBundle::base.html.twig' %}

{% block headline %}Gerät aktualisieren{% endblock %}

{% block content %}
<form action="{{ path('device_update', {'id': id}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
	{{ form_errors(form) }}
	{{ form_widget(form) }}
	<div class="form-actions">
    	<input class="btn btn-primary" type="submit" value="Gerät aktualisieren" />
		<a href="{{ path('device_index') }}" class="btn">Abbrechen</a>
    	<a href="{{ path('device_delete', {'id': id }) }}" class="btn btn-danger"><i class="icon-trash icon-white"></i> {% trans %}Gerät löschen{% endtrans %}</a>
	</div>
</form>
{% endblock %}
